[github]
	user = simonwhitaker
[push]
	default = simple
	autoSetupRemote = true
[fetch]
	prune = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[pull]
	rebase = true
[init]
	defaultBranch = main

[include]
	# Allow local overrides not included in my dotfiles repo
	path = ~/.gitconfig.local

[includeIf "gitdir:~/src/phoebe/"]
	path = ~/.gitconfig.phoebe

[format]
	# Make this the default format for `git log`. To get the original formatting,
	# use `git log --pretty=medium`
	pretty = %C(yellow)%h%Creset%C(cyan)%d%Creset %s %C(green)(%an, %cr)%Creset
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[diff]
	tool = Kaleidoscope
[difftool]
	prompt = false
	trustExitCode = true
[merge]
	tool = Kaleidoscope
[mergetool]
	prompt = false
[rerere]
	enabled = true
[diff "lockb"]
	textconv = bun
	binary = true
